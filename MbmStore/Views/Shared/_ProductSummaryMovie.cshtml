
@using MbmStore.Models

@model MbmStore.Models.Movie

<div class="row">
    <div class="col-md-1">
        <img src="/Content/Images/@Model.ImageUrl" alt="@Model.Title" style="width:100px" />
    </div>
    <div class="col-md-4">
        <strong>Title:</strong> @Model.Title<br />
        <strong>Author:</strong> @Model.Director<br />
        <strong> Price: @String.Format("{0:0.00}", @Model.Price)</strong>
    </div>
    <div class="col-md-7">
        @using (Html.BeginForm("AddToCart", "Cart"))
        {
            @Html.Hidden("ProductId", Model.ProductId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Add to cart" />
        }
    </div>
</div>

